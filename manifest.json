{
  "manifest_version": 3,
  "name": "Snap N Pin",
  "version": "1.0",
  "description": "A screenshot tool similar to Windows' Snipping Tool",
  "permissions": [
    "activeTab",
    "downloads",
    "scripting",
    "tabs"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon.webp",
      "48": "icons/icon.webp",
      "128": "icons/icon.webp"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon.webp",
    "48": "icons/icon.webp",
    "128": "icons/icon.webp"
  },
  "web_accessible_resources": [{
    "resources": ["html2canvas.min.js"],
    "matches": ["<all_urls>"]
  }]
}
